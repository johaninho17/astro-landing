---
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const {title} = Astro.props;
---
<!DOCTYPE html>
<html class="h-full bg-gray-50" lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="description" content="Dashboard template">
  <meta name="viewport" content="width=device-width"/>
  <link rel="icon" type="image/svg+xml" href="/logo-64x64.png"/>
  <meta name="generator" content="Dashboard"/>
  <title>{title}</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@200;400&family=Roboto:wght@100&display=swap" rel="stylesheet">
  <ViewTransitions />
</head>
<body class="h-full font-nunito">

<div class="bg-white">
  <!-- Header -->
  <header class="relative inset-x-0 top-0 z-50">
    <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
      <div class="flex lg:flex-1">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Your Company</span>
          <img class="h-10 w-auto ml-36" src="/images/goeuropelogo.png" alt="">
        </a>
      </div>
      <div id="openNavBar" class="flex lg:hidden">
        <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
               aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
          </svg>
        </button>
      </div>
      <div class="hidden lg:flex lg:gap-x-12">
        <a href="/" class="text-base font-semibold leading-6 text-gray-900">Home</a>
        <a href="/about" class="text-base font-semibold leading-6 text-gray-900">About us</a>
        
        <div class="relative group">
          <button class="mb-2 text-base font-semibold text-gray-900 flex items-center">
            Services
            <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="absolute hidden group-hover:block bg-white shadow-lg rounded-md w-48">
            <a href="/services/assessment-and-planning" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Assessment & Planning</a>
            <a href="/services/product-and-technology" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Product and Technology Advisory</a>
            <a href="/services/sales-go-to-market" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Sales & Go-to-Market</a>
            <a href="/services/marketing-and-pipeline" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Marketing and Pipeline Building</a>
            <a href="/services/recruiting-and-talent" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Recruiting and Talent Acquisition</a>
            <a href="/services/legal-and-regulatory" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Legal & Regulatory Navigation</a>
          </div>
        </div>

      </div>
      <div class="hidden lg:flex lg:flex-1 lg:justify-end">
        <a href="/contact" class="bg-[#B6CB23] text-white px-6 py-3 rounded-md text-base font-semibold hover:bg-green-600 transition duration-300">Contact Us <span aria-hidden="true">&rarr;</span></a>
      </div>
    </nav>
    <!-- Mobile menu, show/hide based on menu open state. -->
    <div id="navBar" class="hidden lg:hidden" role="dialog" aria-modal="true">
      <!-- Background backdrop, show/hide based on slide-over state. -->
      <div class="fixed inset-0 z-50"></div>
      <div
        class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
        <div class="flex items-center justify-between">
          <a href="/" class="-m-1.5 p-1.5">
            <span class="sr-only">Your Company</span>
            <img class="h-8 w-auto" src="images/goeuropelogo.png" alt="">
          </a>
          <button id="closeNavBar" type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
            <span class="sr-only">Close menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                 aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
        <div class="mt-6 flow-root">
          <div class="-my-6 divide-y divide-gray-500/10">
            <div class="space-y-2 py-6">
              <a href="/"
                 class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Home</a>
              <a href="/about"
                 class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">About Us</a>
              <a href="/services"
                 class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Services</a>
            </div>
            <div class="py-6">
              <a href="/contact"
                 class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">
                Contact Us
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <main class="isolate">
    <slot />
  </main>

  <!-- Footer -->
  <div class="mx-auto mt-32 w-full">
    <Footer/>
  </div>
</div>

</body>
</html>


<script>
  const navBar: HTMLElement = document.getElementById('navBar');
  const closeNavBar = document.getElementById('closeNavBar');
  const openNavBar = document.getElementById('openNavBar');

  closeNavBar.addEventListener('click', toggleMenu);
  openNavBar.addEventListener('click', toggleMenu);

  function toggleMenu() {
    navBar.classList.toggle("hidden");
  }
</script>

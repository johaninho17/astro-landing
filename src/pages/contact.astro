---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro - Planetario template.">
    <div>
        <div id="background" class="relative isolate w-full">
            <!-- Image -->
            <img
                src="images/view-dresden-germany.png"
                alt="Meeting"
                class="w-full h-auto object-cover"
            />
            <!-- Text Overlay -->
            <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center px-6">
                    <h1
                        class="text-4xl font-bold tracking-tight text-white sm:text-6xl"
                    >
                        Contact Us
                    </h1>
                </div>
            </div>
        </div>
    </div>

    <div class="relative isolate">
        <div class="mx-auto grid max-w-7xl grid-cols-1 lg:grid-cols-2">
            <div class="relative px-6 pb-20 pt-16">
                <div class="mx-auto max-w-xl lg:mx-0 lg:max-w-lg">
                    <h2
                        class="text-5xl tracking-tight text-bold font-nunito-sans"
                    >
                        Have questions?
                    </h2>
                    <h2
                        class="text-5xl tracking-tight text-bold font-nunito-sans"
                    >
                        Send us a message
                    </h2>

                    <p class="mt-6 text-lg leading-8 text-gray-600 font-nunito">
                        Please fill out the form and we will get back to you as
                        soon as possible. Thank you for your interest.
                    </p>

                    <div class="mx-auto mt-6 max-w-lg space-y-4">
                        <h2
                            class="text-2xl tracking-tight text-bold font-nunito-sans"
                        >
                            Contact Information
                        </h2>
                        <div class="flex gap-x-6">
                            <div
                                class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg"
                            >
                                <svg
                                    class="h-10 w-10"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                                    aria-hidden="true"
                                >
                                    <image
                                        href="images/svg/email.svg"
                                        width="24"
                                        height="24"
                                    />
                                </svg>
                            </div>
                            <div>
                                <h3
                                    class="text-base font-semibold leading-7 text-black font-nunito-sans"
                                >
                                    Email
                                </h3>
                                <p
                                    class="mt-2 leading-7 text-[#1B4671] font-nunito"
                                >
                                    Team@goeuropeconsulting.com
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <form id="contactForm" class="px-6 pt-16">
                <input
                    type="hidden"
                    name="csrfmiddlewaretoken"
                    value="Z0bmepYoKOgOHKPQgiZx3LOBVCVLKhetntCGueWINfWsoskZOsUYYa2sCelk4Wz1"
                />
                <div
                    class="mx-auto max-w-xl lg:mr-0 lg:max-w-lg bg-[#F2F5F7] p-8 rounded-lg shadow-lg"
                >
                    <div
                        class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2"
                    >
                        <div>
                            <label
                                for="id_first_name"
                                class="block text-lg font-nunito leading-6 text-black"
                            >
                                Full name<span class="text-xs text-red-500"
                                    >*</span
                                >
                            </label>
                            <div class="mt-2.5">
                                <input
                                    type="text"
                                    name="full_name"
                                    maxlength="50"
                                    placeholder="John"
                                    class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-800 shadow-sm ring-1 ring-inset ring-white/20 focus:ring-0 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6"
                                    required
                                    id="id_full_name"
                                />
                            </div>
                        </div>
                        <div>
                            <label
                                for="id_last_name"
                                class="block text-lg font-nunito leading-6 text-black"
                            >
                                Title<span class="text-xs text-red-500">*</span>
                            </label>
                            <div class="mt-2.5">
                                <input
                                    type="text"
                                    name="title"
                                    maxlength="50"
                                    placeholder="CEO"
                                    class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-800 shadow-sm ring-1 ring-inset ring-white/20 focus:ring-0 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6"
                                    required
                                    id="id_title"
                                />
                            </div>
                        </div>
                        <div class="sm:col-span-2">
                            <label
                                for="id_email"
                                class="block text-lg font-nunito leading-6 text-black"
                            >
                                Email<span class="text-xs text-red-500">*</span>
                            </label>
                            <div class="mt-2.5">
                                <input
                                    type="email"
                                    name="email"
                                    maxlength="254"
                                    placeholder="e.g. john@email.com"
                                    class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-800 shadow-sm ring-1 ring-inset ring-white/20 focus:ring-0 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6"
                                    required
                                    id="id_email"
                                />
                            </div>
                        </div>
                        <div class="sm:col-span-2">
                            <label
                                for="id_phone"
                                class="block text-lg font-nunito leading-6 text-black"
                            >
                                Company Name
                            </label>
                            <div class="mt-2.5">
                                <input
                                    type="text"
                                    name="contact_phone"
                                    maxlength="50"
                                    placeholder="Enter your company name"
                                    class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-800 shadow-sm ring-1 ring-inset ring-white/20 focus:ring-0 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6"
                                    id="id_company_name"
                                />
                            </div>
                        </div>

                        <div class="sm:col-span-2">
                            <label
                                for="id_phone"
                                class="block text-lg font-nunito leading-6 text-black"
                            >
                                Website URL (optional)
                            </label>
                            <div class="mt-2.5">
                                <input
                                    type="text"
                                    name="url"
                                    placeholder="yourwebsite.com"
                                    class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-800 shadow-sm ring-1 ring-inset ring-white/20 focus:ring-0 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6"
                                    id="id_url"
                                />
                            </div>
                        </div>
                        <div class="sm:col-span-2 relative">
                            <label
                                for="id_message"
                                class="block text-lg font-nunito leading-6 text-black"
                            >
                                Message<span class="text-xs text-red-500"
                                    >*</span
                                >
                            </label>
                            <div class="mt-2.5">
                                <textarea
                                    name="message"
                                    cols="40"
                                    rows="10"
                                    placeholder="Type your message here"
                                    maxlength="600"
                                    class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-800 shadow-sm ring-1 ring-inset ring-white/20 focus:ring-0 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6"
                                    required
                                    id="id_message"
                                    oninput="updateCharacterCount()"></textarea>
                                <!-- Character Count -->
                                <div
                                    id="charCount"
                                    class="absolute bottom-2 right-4 text-sm text-gray-500"
                                >
                                    0/600
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-8 flex justify-center max-w-none">
                        <button
                            type="submit"
                            id="submitButton"
                            class="rounded-md border bg-[#B6CB23] w-full py-3 text-center text-base font-nunito text-[#1B4671] shadow-sm hover:bg-green-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black"
                        >
                            Send message
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const messageBox = document.getElementById("id_message");
            const charCount = document.getElementById("charCount");

            // Update character count on input
            messageBox.addEventListener("input", () => {
                charCount.textContent = `${messageBox.value.length}/600`;
            });
        });

    document.getElementById("submitButton").addEventListener("click", async () => {
        const form = document.getElementById("contactForm");
        const formData = new FormData(form);

        try {
            const response = await fetch("http://localhost:3000/send-email", {
                method: "POST",
                body: JSON.stringify(Object.fromEntries(formData)),
                headers: {
                    "Content-Type": "application/json",
                },
            });

            const result = await response.text();

            if (response.ok) {
                showPopup("Success", result, "success");
                form.reset(); // Reset the form after successful submission
            } else {
                showPopup("Error", result, "error");
            }
        } catch (error) {
            console.error("Error:", error);
            showPopup("Error", "Failed to send the message. Please try again.", "error");
        }
    });
    function showPopup(title, message, type) {
    const popup = document.createElement("div");
    popup.className = `fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white p-6 rounded-lg shadow-lg z-50 ${
        type === "success" ? "border-green-500" : "border-red-500"
    } border-2`;

    popup.innerHTML = `
        <h2 class="text-lg font-bold mb-4">${title}</h2>
        <p class="text-gray-700">${message}</p>
        <button class="mt-4 px-4 py-2 bg-[#B6CB23] text-white rounded-md hover:bg-green-600" id="closePopupButton">
            Close
        </button>
    `;

    document.body.appendChild(popup);

    // Add event listener to close the popup
    const closeButton = document.getElementById("closePopupButton");
    closeButton.addEventListener("click", () => {
        popup.remove();
    });
}
    </script>
</Layout>

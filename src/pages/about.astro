                    <dd
                        class="text-base leading-7  text-gray-600 text-s flex items-center"
                    >
                        <img
                            src="images/svg/linkedin.svg"
                            alt="LinkedIn"
                            class="w-4 h-4 mr-2 object-contain"
                        />
                        <a
                            target="_blank"
                            href="https://www.linkedin.com/in/yamssi/"
                            class="text-blue-500 hover:text-blue-700 italic underline"

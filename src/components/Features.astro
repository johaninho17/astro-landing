---
// src/components/Features.astro
interface Feature {
  title: string;
  image: string; // Path relative to the 'public' directory
  link: string;
}

const features: Feature[] = [
  {
    title: "Assessment and Planning",
    image: "/images/svg/assessment.svg", // Use leading slash for root-relative paths from 'public'
    link: "/services/assessment-and-planning",
  },
  {
    title: "Product and Technology Advisory",
    image: "/images/svg/product.svg",
    link: "/services/product-and-technology",
  },
  {
    title: "Sales and Go-To-Market Modelling", // Ensure this image file exists
    image: "/images/svg/sales.svg",
    link: "/services/sales-go-to-market",
  },
  {
    title: "Marketing and Pipeline Building",
    image: "/images/svg/marketing.svg",
    link: "/services/marketing-and-pipeline",
  },
  {
    title: "European Talent Acquisition",
    image: "/images/svg/recruit.svg",
    link: "/services/recruiting-and-talent",
  },
  {
    title: "Legal and Regulatory Navigation",
    image: "/images/svg/legal.svg",
    link: "/services/legal-and-regulatory",
  },
];
---

<div class="mx-auto max-w-7xl py-16 px-4 sm:px-6 lg:px-8"> {/* Added sm/lg padding */}
  <div class="mx-auto max-w-3xl text-center"> {/* Constrained width for title */}
    <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"> {/* Responsive text size */}
      What we can do for you
    </h2>
    {/* Optional: Add a paragraph describing the section */}
    <!-- <p class="mt-4 text-lg text-gray-600">Description here...</p> -->
  </div>

  {/* Use ul/li for semantic list or keep dl if definition list makes sense */}
  <div class="mt-16">
    <dl class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3"> {/* Consistent gap */}
      {features.map((feature) => (
        <div class="flex"> {/* Use flex to ensure equal height if content varies */}
          {/* Make the entire card a link and the group */}
          <a
            href={feature.link}
            class="group flex flex-col bg-[#F2F5F7] hover:bg-[#1B4671] rounded-xl p-6 text-left transition-colors duration-300 w-full feature-item"
          >
            {/* Image Container */}
            <div class="mb-6 flex justify-left">
              <img
                src={feature.image}
                alt={feature.title} /* Add meaningful alt text */
                class="w-20 h-20 transition-transform duration-300 group-hover:scale-105" /* Optional: subtle image hover effect */
                loading="lazy" /* Improve performance */
              />
            </div>

            {/* Text Content */}
            <dt class="text-xl font-bold text-gray-900 group-hover:text-white transition-colors duration-300">
              {feature.title}
            </dt>

            {/* Removed separate "Learn More" button - whole card is clickable */}
            {/* Optional: add description text if needed */}
            {/* <dd class="mt-2 text-base text-gray-600 group-hover:text-gray-200 transition-colors duration-300 flex-grow">
              Short description...
            </dd> */}

            {/* Optional: Add a visual cue for action if desired */}
            <div class="mt-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-sm font-semibold text-[#B6CB23]">
              Learn More â†’
            </div>
          </a>
        </div>
      ))}
    </dl>
  </div>
</div>

<style>
 /* Scoped styles apply only to this component */
 /* Keep media query if needed, but maybe handle padding with responsive Tailwind classes */
  @media (max-width: 640px) {
    .feature-item {
       padding: 1rem; /* Example using rem */
     }
  } 
</style>

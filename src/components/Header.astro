<header class="fixed inset-x-0 top-0 z-50 bg-white shadow-md px-4 sm:px-2">
    <nav class="flex items-center justify-between p-4 lg:px-8 " aria-label="Global">
      <div class="flex lg:flex-1">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Go Europe</span>
          <img class="h-10 w-auto ml-4 sm:h-10" src="/images/goeuropelogo.png" alt="Go Europe Consulting">
        </a>
      </div>
      <div id="openNavBar" class="flex items-center lg:hidden">
        <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Open main menu</span>          
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
               aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
          </svg>
        </button>
      </div>
      <div class="hidden lg:flex lg:gap-x-12">
        <a href="/" class="text-base font-semibold leading-6 text-gray-900">Home</a>
        <a href="/about" class="text-base font-semibold leading-6 text-gray-900">About Us</a>
        
        <div class="relative group">
          <button id="services-desktop-button" class="mb-2 text-base font-semibold text-gray-900 flex items-center">
            Services
            <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div id="services-desktop-dropdown" class="absolute hidden group-hover:block bg-white shadow-lg rounded-md w-48">
            <a href="/services/assessment-and-planning" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 font-normal">Assessment & Planning</a>
            <a href="/services/product-and-technology" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 font-normal">Product and Technology</a>
            <a href="/services/sales-go-to-market" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 font-normal">Sales and Go-to-Market Modeling</a>
            <a href="/services/marketing-and-pipeline" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Marketing and Pipeline Building</a>
            <a href="/services/recruiting-and-talent" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">European Talent Acquisition</a>
            <a href="/services/legal-and-regulatory" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Legal and Regulatory Navigation</a>
          </div>
        </div>
      </div>
      <div class="hidden lg:flex lg:flex-1 lg:justify-end">
        <a href="/contact" class="bg-[#B6CB23] text-white px-4 py-2 rounded-md text-sm font-semibold hover:bg-green-600 transition duration-300">Contact Us <span aria-hidden="true">&rarr;</span></a>
      </div>
    </nav>   
        <!-- Mobile menu, show/hide based on menu open state. -->
        <div id="navBar" class="hidden lg:hidden sm:p-2" role="dialog" aria-modal="true">
          <!-- Background backdrop, show/hide based on slide-over state. -->
          <div class="fixed inset-0 z-50"></div>
          <div            
            class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
            <div class="flex items-center justify-between">
              <div class="flex items-center justify-between w-full">
                <a href="/" class="-m-1.5 p-1.5">
                  <span class="sr-only">Go Europe</span>
                  <img class="h-8 w-auto" src="/images/goeuropelogo.png" alt="">
                </a>
                <div class="flex items-center space-x-4">
                  <a href="/contact" class="bg-[#B6CB23] text-white px-4 py-2 rounded-md text-sm font-semibold hover:bg-green-600 transition duration-300 shadow-md">Contact Us</a>
                  <button id="closeNavBar" type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
                    <span class="sr-only">Close menu</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
            <div class="mt-6 flow-root flex flex-col justify-between h-[80%]">
              <div class="-my-6 divide-y divide-gray-500/10 text-left items-center space-y-4">
                <a href="/" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Home</a>
                <a href="/about" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">About Us</a>                
                <div class="relative group flex justify-left">
                  <button id="services-mobile-button" class="text-base font-semibold text-gray-900 flex items-center py-2">
                    Services
                    <svg class="ml-1 h-4 w-4 " fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                    </svg>
                  </button>              
                  <div id="services-mobile-dropdown" class="absolute hidden group-hover:block bg-white shadow-lg rounded-md w-48 mt-2">
                    <a href="/services/assessment-and-planning" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Assessment & Planning</a>                 
                    <a href="/services/product-and-technology" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Product and Technology</a>
                    <a href="/services/sales-go-to-market" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Sales and Go-to-Market Modeling</a>
                    <a href="/services/marketing-and-pipeline" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Marketing and Pipeline Building</a>
                    <a href="/services/recruiting-and-talent" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">European Talent Acquisition</a>
                    <a href="/services/legal-and-regulatory" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Legal and Regulatory Navigation</a>
                  </div>
                </div>
                 </div>
            </div>                
          </div>
        </div>
  </header>

  <script>
    const navBar: HTMLElement = document.getElementById('navBar');
    const closeNavBar = document.getElementById('closeNavBar');
    const openNavBar = document.getElementById('openNavBar');

    const servicesDesktopButton = document.getElementById('services-desktop-button');
    const servicesDesktopDropdown = document.getElementById('services-desktop-dropdown');
    const servicesMobileButton = document.getElementById('services-mobile-button');
    const servicesMobileDropdown = document.getElementById('services-mobile-dropdown');

    closeNavBar.addEventListener('click', toggleMenu);
    openNavBar.addEventListener('click', toggleMenu);
  
    function toggleMenu() {
      navBar.classList.toggle("hidden");
    }

    function closeDropdown() {
      servicesDesktopDropdown.classList.add('hidden');
      servicesMobileDropdown.classList.add('hidden');
    }
    
    function handleDropdownOutsideClick(event) {
      const isClickInsideDesktop = servicesDesktopButton.contains(event.target) || servicesDesktopDropdown.contains(event.target);
      const isClickInsideMobile = servicesMobileButton.contains(event.target) || servicesMobileDropdown.contains(event.target);

      const isDesktopOpen = !servicesDesktopDropdown.classList.contains('hidden');
      const isMobileOpen = !servicesMobileDropdown.classList.contains('hidden');
      if (!isClickInsideDesktop && isDesktopOpen) {
        closeDropdown();
      }
      if (!isClickInsideMobile && isMobileOpen) {
        closeDropdown();
      }
    }

    servicesDesktopButton.addEventListener('click', () => servicesDesktopDropdown.classList.toggle('hidden'));
    servicesMobileButton.addEventListener('click', () => servicesMobileDropdown.classList.toggle('hidden'));

    document.addEventListener('click', handleDropdownOutsideClick);
  </script>
  
---
interface Props {}

const {} = Astro.props;
---

<footer
    aria-labelledby="footer-heading"
    class="relative border-t border-gray-900/10 py-24 bg-black text-white"
>
    <div id="full" class="grid grid-cols-4 gap-8 max-w-none px-6">
        <!-- Image -->
        <div class="col-span-2 flex items-start">
            <a href="/" class="">
                <img
                    class="h-full max-w-full lg:ml-32 sm:ml-6"
                    src="/images/goeuropelogo.png"
                    alt="Company name"
                />
            </a>
        </div>
        <div class="grid grid-cols-2 gap-8 col-span-2">
            <div id="list" class="grid grid-cols-2 gap-8 ">
                <div>
                    <h3 class="text-2xl font-medium leading-7 text-white-500">
                        Menu
                    </h3>
                    <ul role="list" class="mt-6 space-y-4">
                        <li>
                            <a
                                href="/"
                                class="text-l leading-6 text-gray-300 hover:text-gray-500"
                                >Home</a
                            >
                        </li>
                        <li>
                            <a
                                href="/about"
                                class="text-l leading-6 text-gray-300 hover:text-gray-500"
                                >About Us</a
                            >
                        </li>
                        <li>
                            <a
                                href="/contact"
                                class="text-l leading-6 text-gray-300 hover:text-gray-500"
                            >
                                Contact Us
                            </a>
                        </li>
                        <li>
                            <a
                                href="/privacy-policy"
                                class="text-l leading-6 text-gray-300 hover:text-gray-500"
                            >
                                Privacy Policy
                            </a>
                        </li>
                        <li>
                            <a
                                href="/imprint"
                                class="text-l leading-6 text-gray-300 hover:text-gray-500"
                            >
                                Imprint
                            </a>
                        </li>
                        <li>
                            <a
                                href="#"
                                class="text-l leading-6 text-gray-300 hover:text-gray-500"
                            >
                                Cookie Banner
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="maw-w-none whitespace-nowrap">
                    <h3 class="text-2xl font-medium leading-7 text-white-500">
                        Contact Us
                    </h3>
                    <ul role="list" class="mt-6 space-y-4">
                        <li>
                            <div class="mt-8">
                                <a
                                    href="/contact"
                                    class="bg-[#B6CB23] text-white px-10 py-4 rounded-md text-base font-normal hover:bg-green-600 transition duration-300 whitespace-nowrap"
                                    >Contact Us <span aria-hidden="true"
                                        >&rarr;</span
                                    ></a
                                >
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Border and Copyright Section -->
    <hr class="border-gray-700 mt-12 max-w-7xl mx-auto" />
    <div class="mt-6 text-center text-sm text-gray-300">
        &copy; Copyright All right reserved
    </div>
</footer>
